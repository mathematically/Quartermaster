<UserControl x:Class="Mathematically.Quartermaster.Views.QuartermasterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:items="clr-namespace:Mathematically.Quartermaster.Domain.Items;assembly=Quartermaster.Domain"
             mc:Ignorable="d">
    <UserControl.Resources>

        <DataTemplate x:Key="PoeItemTemplate">
            <StackPanel TextElement.FontFamily="/Resources/#Fontin SmallCaps"
                        TextElement.FontSize="12"
                        TextOptions.TextFormattingMode="Display"
                        HorizontalAlignment="Center">
                <TextBlock Text="{Binding Rarity, Converter={StaticResource EnumDescriptionConverter}}" />
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text="--------" />
                <TextBlock Text="{Binding ItemLevel, StringFormat='Item Level: {0}'}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button x:Name="HUD">HUD</Button>
        </StackPanel>
        <ContentControl Name="Item" ContentTemplate="{StaticResource PoeItemTemplate}" />
    </DockPanel>
    
</UserControl>
